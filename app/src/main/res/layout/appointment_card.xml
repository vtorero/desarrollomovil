<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    android:clickable="true"
    android:onClick="onClick">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:id="@+id/fechaTextView"
            android:gravity="top"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="87dp"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Monterrico"
            android:id="@+id/localTextView"
            android:gravity="top"
            android:layout_below="@+id/fechaTextView"
            android:layout_alignStart="@+id/specialityTextView"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CardiologÃ­a"
            android:id="@+id/specialityTextView"
            android:gravity="top"
            android:textColor="@color/abc_secondary_text_material_light"
            android:textSize="@dimen/abc_action_bar_content_inset_material"
            android:layout_above="@+id/fechaTextView"
            android:layout_alignStart="@+id/fechaTextView"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="false" />

    </RelativeLayout>
</android.support.v7.widget.CardView>